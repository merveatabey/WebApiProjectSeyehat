@model LoginViewModel

@{
    ViewBag.Title = "Giriş";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - SmartTrip</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            height: 100vh;
            background: linear-gradient(135deg, #000000, #1f1f1f);
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-box {
            background-color: rgba(255, 255, 255, 0.05);
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
            width: 100%;
            max-width: 400px;
            color: white;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            border: none;
            color: white;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.5);
            }

            .form-control:focus {
                background-color: rgba(255, 255, 255, 0.15);
                color: white;
                box-shadow: none;
            }

        .btn-login {
            width: 100%;
            background-color: #0dcaf0;
            border: none;
            color: #000;
            font-weight: bold;
        }

            .btn-login:hover {
                background-color: #31d2f2;
            }

        .text-danger {
            font-size: 14px;
        }
    </style>
</head>
<body>
    <form asp-action="Login" method="post" class="login-box">
        <h2 class="text-center mb-4">Welcome to SmartTrip</h2>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-login">Login</button>

        @if (ViewBag.Error != null)
        {
            <div class="text-danger text-center mt-3">@ViewBag.Error</div>
        }
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
