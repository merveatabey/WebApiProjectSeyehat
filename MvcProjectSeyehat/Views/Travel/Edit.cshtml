@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }



@model ApiProjectSeyehat.Models.Trip


<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Seyahati Güncelle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-controller="Travel" method="post">
                <input type="hidden" asp-for="TripId" />

                <div class="mb-3">
                    <label asp-for="TripName" class="form-label">Seyahat Adı</label>
                    <input asp-for="TripName" class="form-control" placeholder="Seyahat adını giriniz" />
                    <span asp-validation-for="TripName" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StartDate" class="form-label">Başlangıç Tarihi</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="EndDate" class="form-label">Bitiş Tarihi</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Not</label>
                    <textarea asp-for="Notes" rows="4" class="form-control" placeholder="Not ekleyebilirsiniz..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedDate" class="form-label">Oluşturulma Tarihi</label>
                    <input asp-for="CreatedDate" class="form-control" readonly />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" asp-controller="Travel" class="btn btn-secondary">Geri Dön</a>
                    <button type="submit" class="btn btn-warning text-white">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

